{
	admin off
}

:3000 {
	handle /api/* {
		reverse_proxy 127.0.0.1:8080
	}

	handle /uploads/* {
		root * /app/data
		file_server
	}

	handle {
		root * /app/web
		try_files {path} /index.html
		file_server
	}

	encode gzip

	@static path *.js *.css *.woff2 *.png *.jpg *.svg *.ico
	header @static Cache-Control "public, max-age=31536000, immutable"
}
